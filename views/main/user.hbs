<div class="starter-template"></div>

<ul class="nav nav-tabs">
	<li class="active"><a data-toggle="tab" href="#home">Gists</a></li>
	<li><a data-toggle="tab" href="#menu1">Following</a></li>
	<li><a data-toggle="tab" href="#menu2">Followers</a></li>
</ul>

<div class="tab-content">
	<div id="home" class="tab-pane fade in active">
		{{#each gists}}
		<div class="media">
			<div class="media-left">
				<a href="">
					<img class="media-object" src="{{author.photo}}" alt="image"/>
				</a>
			</div> 
			<div class="media-body">
				<h4 class="media-heading">{{author.name}}</h4>
				{{content}}
			</div>
		</div>	
		{{/each}}
	</div>
	<div id="menu1" class="tab-pane fade">

		{{#each identifiedUser.following}}
		<div class="media">
			<div class="media-left">
				<a href="#">
					<img  class="media-object" src="{{photo}}" alt="image"/>
				</a>
			</div> 
			<div class="media-body">
				<h4 class="media-heading">{{name}}</h4>
			</div>
		</div>	
		{{/each}}
	</div>
	<div id="menu2" class="tab-pane fade">
		{{#each identifiedUser.followers}}
		<div class="media">
			<div class="media-left">
				<a href="#">
					<img  class="media-object" src="{{photo}}" alt="image"/>
				</a>
			</div> 
			<div class="media-body">
				<h4 class="media-heading">{{name}}</h4>
			</div>
		</div>	
		{{/each}}
	</div>
</div>