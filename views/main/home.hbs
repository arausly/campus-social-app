<div class="starter-template">
	<h3>Join the gist, make a comment, post something</h3>
</div>
<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
	<form id="send_gists">
		<input type="text" id="gist" autofocus class="form-control" placeholder="gists here" />
		<br />
		<button class="btn btn-primary btn-md">Gist</button>
	</form>
	<br />
	<br />
	<div class="gists">
			{{#each gists}}
		<div class="media">
			<div class="media-left">
				<a href="/user/{{author._id}}">
					<img  class="media-object" src="{{author.photo}}" alt="image"/>
				</a>
			</div> 
			<div class="media-body">
				<h4 class="media-heading">{{author.name}}</h4>
				<p>{{content}}</p>
			</div>
		</div>	
			{{/each}}
	</div>
</div>